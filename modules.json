{
  "custom/arch": {
    "format": "󰣇",
    "tooltip": true,
    "tooltip-format": "I use arch btw"
  },

  "hyprland/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "warp-on-scroll": false,
    "format": "{name}",
    "format-icons": {
      "urgent": "󰀦",
      "active": "󰄬",
      "default": "󰧞"
    }
  },

  "cpu": {
    "format": "CPU: {usage}%",
    "tooltip": false
  },

  "memory": {
    "format": "RAM {}%"
  },

  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "activated",
      "deactivated": "deactivated"
    }
  },

  "pulseaudio": {
    "format": "{format_source} / {volume}%",
    "format-muted": "{format_source} / muted",
    "format-source": "open",
    "format-source-muted": "muted",
    "format-icons": {
      "headphone": "󰋋",
      "hands-free": "󰤢",
      "headset": "󰋎",
      "phone": "󰤫",
      "portable": "󰤬",
      "car": "󰄍",
      "default": ["󰕿", "󰖀", "󰕾"]
    },
    "on-click": "pavucontrol"
  },

  "backlight": {
    "format": "{percent}%",
    "format-icons": ["󰃞", "󰃟", "󰃠", "󰃡", "󰃢", "󰃣", "󰃤", "󰃥", "󰃝"]
  },

  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{capacity}%",
    "format-full": "{icon} {capacity}%",
    "format-charging": "󰂄 {capacity}%",
    "format-plugged": "󰚥 {capacity}%",
    "format-icons": ["󰁺", "󰁼", "󰁾", "󰂀", "󰁹"]
  },

  "clock": {
    "format": "{:%H:%M | %e %B}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
  },

  "tray": {
    "spacing": 18
  }
}
